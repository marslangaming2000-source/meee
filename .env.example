# Y2Tdown Environment Variables

# Server Configuration
PORT=8080
NODE_ENV=development

# Ping Message (optional)
PING_MESSAGE=pong

# Video Downloader Configuration
# These APIs are optional and can enhance the downloader functionality

# YouTube API (optional - for enhanced YouTube features)
# Get from: https://console.developers.google.com
YOUTUBE_API_KEY=your_youtube_api_key_here

# For production, you may want to add support for external video download APIs:

# RapidAPI Key (optional - for using RapidAPI video download services)
# Get from: https://rapidapi.com
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=your_rapidapi_host_here

# Custom Video Processing API (optional)
VIDEO_API_ENDPOINT=https://api.example.com
VIDEO_API_KEY=your_video_api_key_here

# Storage Configuration (optional - for cloud storage)
# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1

# Firebase (optional)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_storage_bucket

# Database Configuration (optional - for tracking downloads)
DATABASE_URL=your_database_url_here

# Feature Flags
ENABLE_PLAYLIST_DOWNLOAD=false
ENABLE_SUBTITLE_DOWNLOAD=true
MAX_DOWNLOAD_SIZE_MB=5000
DOWNLOAD_TIMEOUT_SECONDS=300
